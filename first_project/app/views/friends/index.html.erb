<% content_for :title, "Friends" %>

<h1>Friends</h1>

<table class="table table-striped table-bordered table-hover"
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Git Hub</th>
      <th colspan="3"><th/>
    </tr>
  </thead>

  <tbody class="table-group-divider">
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %> </td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.git_hub %></td>

        <td><%= link_to 'Details', friend %> </td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %> </td>
        <td><%= button_to "Destroy", friend, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></td>

      </tr>
    <% end %>
    </tbody>

    </table>
    </br>

    <%= link_to 'Add New Friend', new_friend_path, class:"btn btn-secondary" %>

      


